{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "outDir": "./components",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "jquery"
    ]
  },
  "include": [
    "components"
  ],
  "exclude": [
    "bin",
    "node_modules",
    "wwwroot"
  ]
}


